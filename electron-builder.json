{
  "appId": "com.alexcorreagomes.videoanalyzer",
  "productName": "Video Analyzer",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron.js",
    "public/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico",
    "publisherName": "Alex Correa Gomes"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "public/favicon.ico",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/favicon.ico",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
